@model TalentHunt.Models.productionevent
@using TalentHunt.Models
@{ 
    Layout = null; 
}

<!DOCTYPE html>

<html lang="en">

<head>
    <title>Event Details</title>
    <!-- HTML5 Shim and Respond.js IE11 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 11]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    <!-- Meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="Dasho Bootstrap admin template made using Bootstrap 4 and it has huge amount of ready made feature, UI components, pages which completely fulfills any dashboard needs." />
    <meta name="keywords" content="admin templates, bootstrap admin templates, bootstrap 4, dashboard, dashboard templets, sass admin templets, html admin templates, responsive, bootstrap admin templates free download,premium bootstrap admin templates, Dasho, Dasho bootstrap admin template">
    <meta name="author" content="Phoenixcoded" />

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <!-- CSS -->
    <link rel="stylesheet" type="text/css" href="~/vendors/styles/core.css">
    <link rel="stylesheet" type="text/css" href="~/vendors/styles/icon-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/vendors/styles/style.css">

    <!-- Favicon icon -->
    <link rel="icon" href="~/assets/images/favicon.svg" type="image/x-icon">
    <!-- fontawesome icon -->
    <link rel="stylesheet" href="~/assets/fonts/fontawesome/css/fontawesome-all.min.css">
    <!-- animation css -->
    <link rel="stylesheet" href="~/assets/plugins/animation/css/animate.min.css">

    <!-- vendor css -->
    <link rel="stylesheet" href="~/assets/css/style.css">

</head>

<body class="">

    @{ Html.RenderPartial("_Navbar"); }
    <!-- [ Main Content ] start -->
    <div class="pcoded-main-container2">
        <div class="pcoded-wrapper">
            <div class="pcoded-content">
                <div class="pcoded-inner-content">
                    <div class="main-body">
                        <div class="page-wrapper">
                            <!-- [ Main Content ] start -->
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="card user-card user-card-2 shape-right">
                                        <div class="card-header border-0 p-2 pb-0">
                                            <div class="clearfix mb-1">
                                                <div class="pull-left">
                                                    <h4 class="text-blue h4 mx-3 my-3">Event Details</h4>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row align-items-center mx-4">
                                            <div class="col-auto col pr-0">
                                                <div class="change-profile">
                                                    <div class="dropdown">
                                                        <a class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            <div class="profile-dp">
                                                                <img class="img-radius img-fluid wid-100" src="@Url.Content(Model.image)" alt="User image">
                                                            </div>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col">
                                                <h6 class="mb-1">@Html.DisplayFor(model => model.ename)</h6>
                                                <p>
                                                    By @TempData["name"]
                                                </p>
                                            </div>
                                        </div>
                                        <br /><br />
                                        <div class="card-body pt-0">
                                            <div class="user-about-block">
                                                <div class="row align-items-center">
                                                    <div class="col">
                                                        <div class="col align-items-center my-3">
                                                        </div>

                                                        <table border="0" class="table">
                                                            <tr>
                                                                <th>Event Type</th>
                                                                <td>@Html.DisplayFor(model => model.etype)</td>
                                                            </tr>
                                                            <tr>
                                                                <th>Event Manager</th>
                                                                <td>@Html.DisplayFor(model => model.emanager)</td>
                                                            </tr>
                                                            <tr>
                                                                <th>Event Start Date</th>
                                                                <td>@Html.DisplayFor(model => model.startdate)</td>
                                                            </tr>
                                                            <tr>
                                                                <th>Event End Date</th>
                                                                <td>@Html.DisplayFor(model => model.enddate)</td>
                                                            </tr>
                                                            <tr>
                                                                <th>Venue</th>
                                                                <td>@Html.DisplayFor(model => model.evenu)</td>
                                                            </tr>
                                                            <tr>
                                                                <th>Visitors Count</th>
                                                                <td>@Html.DisplayFor(model => model.evisitors)</td>
                                                            </tr>
                                                            <tr>
                                                                <th>Application Deadline</th>
                                                                <td>@Html.DisplayFor(model => model.appdeadline)</td>
                                                            </tr>
                                                            <tr>
                                                                <th>Description</th>
                                                                <td>@Html.DisplayFor(model => model.description)</td>
                                                            </tr>
                                                            <tr>
                                                            </tr>
                                                            <tr style="color:indianred">
                                                                <td colspan="2" style="font-size:20px">
                                                                    Event Requirements
                                                                </td>
                                                            </tr>
                                                            @foreach (var reqs in (IEnumerable<eventrequire>)TempData["reqs"])
                                                            {
                                                                <tr>
                                                                    <th>Talent</th>
                                                                    <td>@Html.DisplayFor(modelItem => reqs.talent.ttype)</td>
                                                                </tr>

                                                                <tr>
                                                                    <th>Age Range</th>
                                                                    <td>@Html.DisplayFor(modelItem => reqs.agerange)</td>
                                                                </tr>

                                                                <tr>
                                                                    <th>Gender</th>
                                                                    <td>@Html.DisplayFor(modelItem => reqs.gender)</td>
                                                                </tr>

                                                                <tr>
                                                                    <th>Payment Range</th>
                                                                    <td>@Html.DisplayFor(modelItem => reqs.payrange)</td>
                                                                </tr>
}
                                                        </table>
                                                        @{ 
                                                            if (Session["uid"] != null)
                                                            {
                                                                <center>
                                                                    @Html.ActionLink("Apply", "Create", "UserApply", new { id = Model.peid }, new { @class = "btn btn-primary" })
                                                                </center> 
                                                            } 
                                                        }

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="pcoded-main-container2">
        <div class="pcoded-wrapper">
            <div class="pcoded-content">
                <div class="pcoded-inner-content">
                    <div class="main-body">
                        <div class="page-wrapper">
                            <!-- [ Main Content ] start -->
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="card user-card user-card-2 shape-right">
                                        <div class="card-header border-0 p-2 pb-0">
                                            <div class="clearfix mb-1">
                                                <div class="pull-left">
                                                    <h4 class="text-blue h4 mx-3 my-3">Biddings on this event</h4>
                                                </div>
                                            </div>
                                        </div>
                                        <br /><br />
                                        <div class="card-body pt-0">
                                            <div class="user-about-block">
                                                <div class="row align-items-center">
                                                    <div class="col">
                                                        <div class="col align-items-center my-3">
                                                        </div>

                                                        <table class="table">
                                                            <tr>
                                                                <th>
                                                                    Event Name
                                                                </th>
                                                                <th>
                                                                    User Name
                                                                </th>
                                                                <th>
                                                                    Application Date
                                                                </th>
                                                                <th>
                                                                    Expected Payment
                                                                </th>
                                                                <th>
                                                                    Message
                                                                </th>
                                                            </tr>

                                                            @if (Session["uid"] != null && TempData["NotFoundUserBids"] != null)
                                                            {
                                                                <tr>
                                                                    <td style="color:indianred" colspan="5"><center>@TempData["NotFoundUserBids"]</center></td>
                                                                </tr>
                                                            }
                                                            @if (Session["pid"] != null && TempData["NotFound"] != null)
                                                            {
                                                                <tr>
                                                                    <td style="color:indianred" colspan="5"><center>@TempData["NotFound"]</center></td>
                                                                </tr>
                                                            }
                                                            @if (@Session["pid"] != null)
                                                            {
                                                                foreach (var pdata in (IEnumerable<userapply>)TempData["pdata"])
                                                                {

                                                                    <tr>
                                                                        <td style="color:indianred">
                                                                            @Html.DisplayFor(modelItem => pdata.productionevent.ename)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => pdata.user.fname)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => pdata.appdate)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => pdata.expay)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => pdata.message)
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            }

                                                            @if (@Session["uid"] != null)
                                                            {
                                                                foreach (var pdata in (IEnumerable<userapply>)TempData["bids"])
                                                                {

                                                                    <tr>
                                                                        <td style="color:indianred">
                                                                            @Html.DisplayFor(modelItem => pdata.productionevent.ename)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => pdata.user.fname)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => pdata.appdate)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => pdata.expay)
                                                                        </td>
                                                                        <td>
                                                                            @Html.DisplayFor(modelItem => pdata.message)
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            }
                                                        </table>

                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Required Js -->
    <script src="~/assets/js/vendor-all.min.js"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/assets/js/pcoded.min.js"></script>
</body>


